@using MusicOrganizer.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Search Results</h1>
</div>

@if (Model.Count == 0)
{
  <h3>No artists found.</h3>
}

@foreach (Artist artist in Model)
{
  <h3><a href="/artists/@artist.Id">@artist.Name</a></h3>
}

<a href='/'><button>Home</button></a>